<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PureStore.App.Views.Desktop.User"
             Title="Settings">
    
    <VerticalStackLayout>
        <Label
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="btnChangeTheme" BackgroundColor="{StaticResource Primary}" 
                FontFamily="OpenSansRegular" Text="Change theme"
                HeightRequest="40" CornerRadius="10"
                TextColor="{DynamicResource White}"
                HorizontalOptions="Center" Clicked="btnChangeTheme_Clicked"/>
    </VerticalStackLayout>
        
</ContentPage>